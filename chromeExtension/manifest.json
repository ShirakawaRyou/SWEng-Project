{
  "manifest_version": 3,
  "name": "网页顶部侧边栏扩展 (图标触发)",
  "version": "1.1",
  "description": "点击扩展图标可展开/收起网页顶部侧边栏。",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["sidebarTemplate.js", "sidebar.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_icon": {
      
    },
    "default_title": "切换顶部侧边栏"
  },
  "icons": {
    
  }
}